<!DOCTYPE html>

<head>
    <meta charset="utf-8" />
   
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>

    <link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <link href="~/Content/materialize.css" rel="stylesheet" />
    <script src="~/Scripts/materialize.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <script src="~/Scripts/moment.js"></script>
    <link rel="stylesheet" href="//cdn.jsdelivr.net/chartist.js/latest/chartist.min.css">
    <script src="//cdn.jsdelivr.net/chartist.js/latest/chartist.min.js"></script>
    <script src="~/Scripts/pdfmake.min.js"></script>
    <script src="~/Scripts/vfs_fonts.js"></script>
    <script src="~/Scripts/JsBarcode.all.min.js"></script>
   
</head>
<style type="text/css">
   #left_content{
        height:93vh;
        font-size:2em;
    }
    input[type="search"] {
height: 64px !important; /* or height of nav */
}
</style>
    
<body>
    


    <div class="nav-wrapper">
        <nav class="light-green darken-1" id="w7" role="navigation">
            <div class="container navbar-fixed">
                <a class="brand-logo" href="#">DEMO ICDB Lite</a>
                <div id="w7-collapse">
                    <ul id="w8" class="right hide-on-med-and-down">
                        <li>
                            <form id="search_form">
                                <div class="input-field">
                                    <input id="top_search_bar" type="search" class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Enter Asset Tag to Begin Searching" placeholder="Search..." required>
                                    <label  class="label-icon" for="search"><i class="medium material-icons">search</i></label>
                                    <i class="material-icons">close</i>
                                </div>
                            </form>
                        </li>
                        <li>
                            @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))
                            {
                            @Html.AntiForgeryToken()
                        <a class="tooltipped" data-position="bottom" data-delay="50" data-tooltip="Logout" href="javascript:document.getElementById('logoutForm').submit()"><i class="material-icons">directions_run</i></a>
                            }
                        
                        </li>
                    </ul>
                 
                    

                </div>
            </div>
         
        </nav>
    </div>
    <div class="row">

        <div id="left_content" class="col s3 blue-grey lighten-5">
            <!-- Grey navigation panel -->
            <ul id="left_content_ul" class="section table-of-contents">
                <li><a href="@Url.Action("index", "home")" class="">Home</a></li>
                <li><a href="@Url.Action("home", "report")" class="">Report</a></li>
                <li><a href="@Url.Action("index", "discoveries")" class="">Discovery</a></li>
                <li><a href="@Url.Action("index", "rediscoveries")" class="">Rediscovery</a></li>
                <li><a href="@Url.Action("index", "production_log")" class="">Imaging</a></li>
                <li><a href="@Url.Action("index", "monitor_log")" class="">Monitor Discovery</a></li>
                <li><a href="@Url.Action("index", "pallets")">Pallets</a></li>
                <li><a href="@Url.Action("index", "manage")" class="">Settings</a></li>

            </ul>
        </div>

        <div class="col s9">
          
                
                    @RenderBody()
               
           
          
        </div>

    </div>

    <!-- Modal Trigger -->


    <!-- Modal Structure -->
    
    
</body>
<script>
    $('#left_content_ul > li').click(function () {

        $(this).attr('class', 'active');

    });
   

    $("#search_form").submit(function (event) {



        event.preventDefault();

        var asset_tag = $('#top_search_bar').val();
        
        var link = "@Url.Action("search_result","home",new { asset_tag = "123" })";
        link = link.replace("123", asset_tag);


        window.location.href = link;




    });


</script>